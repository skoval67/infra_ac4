services:
  traefik:
    image: traefik
    restart: unless-stopped
    ports:
      - '80:80'
      - '8080:8080'
    volumes:
      - ./config:/etc/traefik
    command:
      - --api.dashboard=true
      - --api.insecure=true
      - --entryPoints.web.address=:80
      - --providers.file.directory=/etc/traefik
